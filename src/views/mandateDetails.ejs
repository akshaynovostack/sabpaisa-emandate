    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="header-content">
                <div class="header-icon">
                    <span class="icon">📋</span>
                </div>
                <h1>Mandate Details</h1>
                <p>Your mandate registration information</p>
            </div>
        </div>

        <!-- Progress Section -->
        <div class="progress-section">
            <div class="progress-container">
                <div class="countdown" id="countdown">Redirecting in 10 seconds...</div>
                <div class="progress-bar-container">
                    <div class="progress-bar" id="progressBar"></div>
                </div>
            </div>
        </div>

        <!-- Details Section -->
        <div class="details-section">
            <div class="details-header">
                <span class="icon">📊</span>
                <h2>Mandate Information</h2>
            </div>
            
            <div class="details-grid">
                <% for (const [key, value] of Object.entries(mandate)) { %>
                    <div class="detail-item fade-in">
                        <div class="detail-label"><%= key.replace(/_/g, ' ').toUpperCase() %></div>
                        <div class="detail-value <%= typeof value === 'object' && value.class ? value.class : '' %>">
                            <%= typeof value === 'object' && value.value ? value.value : value %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <div class="secure-badge">
                <span class="icon">🔒</span>
                <span>Secured by e-Nach</span>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize countdown and progress
            startCountdown();
        });

        function startCountdown() {
            const progressBar = document.getElementById("progressBar");
            const countdown = document.getElementById("countdown");
            const redirectUrl = "<%= redirectUrl %>";
            const enachResponse = "<%= enachResponse %>";
            
            let timeLeft = 10;
            
            const timer = setInterval(() => {
                timeLeft -= 1;
                const progress = ((10 - timeLeft) / 10) * 100;
                progressBar.style.width = `${progress}%`;
                countdown.textContent = `Redirecting in ${timeLeft} seconds...`;
                
                // Add pulse animation when time is running low
                if (timeLeft <= 5) {
                    countdown.classList.add('pulse');
                    countdown.style.color = 'var(--error)';
                }
                
                if (timeLeft === 0) {
                    clearInterval(timer);
                    submitForm(redirectUrl, enachResponse);
                }
            }, 1000);
        }

