    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mandate Details - Mobile View</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
    />
    <style>
      body {
        font-family: "Roboto", sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .iphone-frame {
        width: 375px;
        height: 700px;
        background-color: #000;
        border-radius: 40px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
      }

      .screen {
        width: 360px;
        height: 98%;
        background-color: #fff;
        border-radius: 30px;
        overflow-y: scroll;
        box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.1);
        padding: 1rem;
      }

      .notch {
        width: 100px;
        height: 15px;
        background-color: #000;
        border-radius: 20px;
        position: absolute;
        top: 10px;
      }

      .header {
        background-color: #1565c0;
        color: white;
        padding: 1rem;
        display: flex;
        align-items: center;
        font-weight: 500;
      }

      .header svg {
        margin-right: 1rem;
        cursor: pointer;
      }

      .details-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: #333;
      }

      .detail-title {
        font-weight: 500;
        color: #555;
      }

      .detail-value {
        color: #000;
        font-weight: 400;
        text-align: right;
      }

      .progress-container {
        margin-top: 1rem;
        text-align: center;
      }

      .progress-bar {
        height: 10px;
        background-color: #1565c0;
        width: 0%;
        border-radius: 5px;
        transition: width 1s linear;
      }

      .countdown {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: #555;
      }

      .btn-primary {
        background-color: #1565c0;
        border: none;
        border-radius: 12px;
        padding: 0.75rem;
        width: 100%;
        margin-top: 1.5rem;
        font-size: 1rem;
        font-weight: 500;
      }

      .btn-primary:hover {
        background-color: #0d47a1;
      }
    </style>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T4F3SZLP"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="iphone-frame">
      <div class="notch"></div>
      <div class="screen">
        <div class="header">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="white"
            class="bi bi-arrow-left"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M15 8a.5.5 0 0 1-.5.5H2.707l4.147 4.146a.5.5 0 0 1-.708.708l-5-5a.5.5 0 0 1 0-.708l5-5a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z"
            />
          </svg>
          <b>Mandate</b>
        </div>
        <div class="progress-container">
          <div class="countdown" id="countdown">Redirecting in 10 seconds...</div>
          <div class="progress-bar" id="progressBar"></div>
        </div>
        <div class="details-group">
          <% for (const [key, value] of Object.entries(mandate)) { %>
            <div class="detail-item">
              <span class="detail-title"><%= key.replace(/_/g, ' ').toUpperCase() %></span>
              <span class="detail-value"><%= value || 'N/A' %></span>
            </div>
          <% } %>
        </div>

       
      </div>
    </div>
    <script>
      const progressBar = document.getElementById("progressBar");
      const countdown = document.getElementById("countdown");
      const redirectUrl = "<%= redirectUrl %>"; // Pass the URL where the form should be posted
      const enachResponse = "<%= enachResponse %>"; // Pass the URL where the form should be posted
    
      let timeLeft = 10;
    
      const timer = setInterval(() => {
        timeLeft -= 1;
        progressBar.style.width = `${(10 - timeLeft) * 10}%`;
        countdown.textContent = `Redirecting in ${timeLeft} seconds...`;
    
        if (timeLeft === 0) {
          clearInterval(timer);
    
          // Create a form dynamically
          const form = document.createElement("form");
          form.method = "POST";
          form.action = redirectUrl;
          form.target = "_blank"; // Open in a new tab
    
          // Add input fields to the form (if needed)
          const params = {
            enachResponse: enachResponse,
          };
    
          for (const [key, value] of Object.entries(params)) {
            const input = document.createElement("input");
            input.type = "hidden";
            input.name = key;
            input.value = value;
            form.appendChild(input);
          }
    
          // Append form to the body and submit it
          document.body.appendChild(form);
          form.submit();
        }
      }, 1000);
    </script>
  </body>
</html>
