    <title>Mandate Details</title>
    <style>
      :root {
        --primary: #006CED;
        --primary-dark: #0056B3;
        --success: #28A745;
        --warning: #FFC107;
        --error: #DC3545;
        --white: #FFFFFF;
        --gray-50: #F9FAFB;
        --gray-100: #F3F4F6;
        --gray-200: #E5E7EB;
        --gray-300: #D1D5DB;
        --gray-400: #9CA3AF;
        --gray-500: #6B7280;
        --gray-600: #4B5563;
        --gray-700: #374151;
        --gray-800: #1F2937;
        --gray-900: #111827;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
      }

      .container {
        max-width: 480px;
        width: 100%;
        background: var(--white);
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
      }

      /* Header */
      .header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 2rem 1.5rem 1.5rem;
        text-align: center;
        position: relative;
      }

      .header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
      }

      .header-content {
        position: relative;
        z-index: 1;
      }

      .header-icon {
        width: 64px;
        height: 64px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 2rem;
      }

      .header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      .header p {
        font-size: 1rem;
        opacity: 0.9;
        font-weight: 400;
      }

      .iphone-frame {
        width: 375px;
        height: 700px;
        background-color: #000;
        border-radius: 40px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
      }

      .screen {
        width: 360px;
        height: 98%;
        background-color: #fff;
        border-radius: 30px;
        overflow-y: scroll;
        box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.1);
        padding: 1rem;
      }

      .notch {
        width: 100px;
        height: 15px;
        background-color: #000;
        border-radius: 20px;
        position: absolute;
        top: 10px;
      }

      .header {
        background-color: #1565c0;
        color: white;
        padding: 1rem;
        display: flex;
        align-items: center;
        font-weight: 500;
      }

      .header svg {
        margin-right: 1rem;
        cursor: pointer;
      }

      .details-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: #333;
      }

      .detail-title {
        font-weight: 500;
        color: #555;
      }

      .detail-value {
        color: #000;
        font-weight: 400;
        text-align: right;
      }

      .progress-container {
        margin-top: 1rem;
        text-align: center;
      }

      .progress-bar {
        height: 10px;
        background-color: #1565c0;
        width: 0%;
        border-radius: 5px;
        transition: width 1s linear;
      }

      .countdown {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: #555;
      }

      .btn-primary {
        background-color: #1565c0;
        border: none;
        border-radius: 12px;
        padding: 0.75rem;
        width: 100%;
        margin-top: 1.5rem;
        font-size: 1rem;
        font-weight: 500;
      }

      .btn-primary:hover {
        background-color: #0d47a1;
      }

      /* Progress Section */
      .progress-section {
        padding: 1.5rem;
        background: var(--gray-50);
        border-bottom: 1px solid var(--gray-200);
      }

      .progress-container {
        text-align: center;
      }

      .countdown {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--gray-700);
        margin-bottom: 1rem;
      }

      .progress-bar-container {
        background: var(--gray-200);
        border-radius: 12px;
        height: 8px;
        overflow: hidden;
        position: relative;
      }

      .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--primary) 0%, var(--success) 100%);
        border-radius: 12px;
        transition: width 1s ease;
        position: relative;
      }

      .progress-bar::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: shimmer 2s infinite;
      }

      @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
      }

      /* Details Section */
      .details-section {
        padding: 1.5rem;
      }

      .details-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
      }

      .details-header .icon {
        font-size: 1.5rem;
        margin-right: 0.75rem;
        color: var(--primary);
      }

      .details-header h2 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--gray-800);
      }

      .details-grid {
        display: grid;
        gap: 1rem;
      }

      .detail-item {
        background: var(--white);
        border: 1px solid var(--gray-200);
        border-radius: 12px;
        padding: 1rem;
        transition: all 0.3s ease;
      }

      .detail-item:hover {
        border-color: var(--primary);
        box-shadow: 0 4px 12px rgba(0, 108, 237, 0.1);
        transform: translateY(-1px);
      }

      .detail-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--gray-600);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
      }

      .detail-value {
        font-size: 1rem;
        font-weight: 600;
        color: var(--gray-900);
        word-break: break-word;
      }

      .detail-value.status-active {
        color: var(--success);
      }

      .detail-value.status-pending {
        color: var(--warning);
      }

      .detail-value.status-failed {
        color: var(--error);
      }

      /* Footer */
      .footer {
        padding: 1.5rem;
        background: var(--gray-50);
        border-top: 1px solid var(--gray-200);
        text-align: center;
      }

      .secure-badge {
        display: inline-flex;
        align-items: center;
        background: var(--white);
        border: 1px solid var(--gray-200);
        border-radius: 20px;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        color: var(--gray-600);
        font-weight: 500;
      }

      .secure-badge .icon {
        font-size: 1rem;
        margin-right: 0.5rem;
        color: var(--success);
      }

      /* Icon styles */
      .icon {
        display: inline-block;
        font-size: 1.2em;
        line-height: 1;
        vertical-align: middle;
      }

      /* Responsive Design */
      @media (max-width: 480px) {
        .container {
          margin: 0;
          border-radius: 0;
          min-height: 100vh;
        }

        .header {
          padding: 1.5rem 1rem 1rem;
        }

        .header h1 {
          font-size: 1.5rem;
        }

        .details-section {
          padding: 1rem;
        }

        .detail-item {
          padding: 0.875rem;
        }
      }

      /* Animation Classes */
      .fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .pulse {
        animation: pulse 1s infinite;
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 1;
        }
        50% {
          opacity: 0.7;
        }
      }
    </style>
  </head>
